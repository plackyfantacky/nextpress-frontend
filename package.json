{
    "name": "adamtrickett.com",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "generate": "node scripts/build--generate-static-html.js",
        "generate:html": "tsx --tsconfig tsconfig.json scripts/build--generate-static-html.tsx",
        "safelist": "node scripts/build-safelist.js",
        "safelist:watch": "node scripts/build-safelist.js --watch",
        "watch": "concurrently -n 'SAFELIST,NEXT' -c 'yellow.bold,cyan.bold' \"node scripts/build-safelist.js\" \"next dev\" ",
        "dev": "next dev",
        "start": "next start",
        "lint": "next lint",
        "build": "npm run safelist && next build"
    },
    "dependencies": {
        "highlight.js": "^11.11.1",
        "html-react-parser": "^5.2.5",
        "micromodal": "^0.6.1",
        "next": "^15.3.4",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.10",
        "@tailwindcss/postcss": "^4",
        "@types/node": "24.0.10",
        "@types/react": "19.1.8",
        "concurrently": "^9.1.2",
        "dotenv": "^16.5.0",
        "https-proxy-agent": "^7.0.6",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.13",
        "tailwindcss": "^4",
        "tsx": "^4.20.3",
        "typescript": "5.8.3"
    }
}
